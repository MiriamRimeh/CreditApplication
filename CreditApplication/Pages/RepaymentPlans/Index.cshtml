@page
@model CreditApplication.Pages.RepaymentPlans.IndexModel
@{
    ViewData["Title"] = "Погасителен план";
}

<h2>Погасителен план @if (Model.CreditId.HasValue)
    {
        <text>за кредит № @Model.CreditId.Value</text>
    }</h2>

@if (!Model.RepaymentPlan.Any())
{
    <div class="alert alert-info">
        Няма записи за погасителен план.
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>№</th>
                <th>Дата</th>
                <th>Вноска</th>
                <th>Главница</th>
                <th>Лихва</th>
                <th>Платено на</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rp in Model.RepaymentPlan)
            {
                <tr>
                    <td>@rp.InstallmentNumber</td>
                    <td>@rp.InstallmentDate.ToString("dd.MM.yyyy")</td>
                    <td>@rp.InstallmentAmount.ToString("F2")</td>
                    <td>@rp.Principal.ToString("F2")</td>
                    <td>@rp.Interest.ToString("F2")</td>
                    <td>@rp.PayedOnDate.ToString("dd.MM.yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}
