@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Client,Employee,Admin")]
@model CreditApplication.Pages.RepaymentPlans.IndexModel
@{
    ViewData["Title"] = "Погасителен план";
}

<h2>Погасителен план @if (Model.CreditId.HasValue)
    {
        <text>за кредит № @Model.CreditId.Value</text>
    }</h2>


@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success">
        @Model.StatusMessage
    </div>
}

@if (!Model.RepaymentPlan.Any())
{
    <div class="alert alert-info">
        Няма записи за погасителен план.
    </div>
}
else
{
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row gx-2 gy-2 align-items-end">
                <div class="col-sm-3">
                    <label asp-for="CreditId" class="form-label">ID на кредита</label>
                    <input asp-for="CreditId" type="number" class="form-control" placeholder="Номер на кредит" />
                </div>
                <div class="col-sm-3">
                    <label asp-for="SearchInstallmentDate" class="form-label">Дата на вноска</label>
                    <input asp-for="SearchInstallmentDate" type="date" class="form-control" />
                </div>
                <div class="col-sm-3">
                    <label asp-for="SearchPayedOnDate" class="form-label" >Платено на</label>
                    <input asp-for="SearchPayedOnDate" type="date" class="form-control" />
                </div>
                <div class="col-sm-3 d-grid">
                    <button type="submit" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                        </svg>
                        Търси
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th scope="col">

                        <a asp-page="./Index"
                           asp-route-sortOrder="@Model.InstallmentNumberSort"
                           asp-route-CreditId="@Model.CreditId"
                           asp-route-SearchInstallmentDate="@(Model.SearchInstallmentDate?.ToString("yyyy-MM-dd"))"
                           asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))"
                           asp-route-PageIndex="1">
                            № вноска
                        </a>
                    </th>
                    <th scope="col">
                        <a asp-page="./Index"
                           asp-route-sortOrder="@Model.CreditIDSort"
                           asp-route-CreditId="@Model.CreditId"
                           asp-route-SearchInstallmentDate="@(Model.SearchInstallmentDate?.ToString("yyyy-MM-dd"))"
                           asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))"
                           asp-route-PageIndex="1">
                            № на кредита
                        </a>
                    </th>
                    <th scope="col">
                        <a asp-page="./Index"
                           asp-route-sortOrder="@Model.InstallmentDateSort"
                           asp-route-CreditId="@Model.CreditId"
                           asp-route-SearchInstallmentDate="@(Model.SearchInstallmentDate?.ToString("yyyy-MM-dd"))"
                           asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))"
                           asp-route-PageIndex="1">
                            Дата на вноска
                        </a>
                    </th>
                    <th scope="col">
                        <a asp-page="./Index"
                           asp-route-sortOrder="@Model.AmountSort"
                           asp-route-CreditId="@Model.CreditId"
                           asp-route-SearchInstallmentDate="@(Model.SearchInstallmentDate?.ToString("yyyy-MM-dd"))"
                           asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))"
                           asp-route-PageIndex="1">
                            Сума на вноска
                        </a>
                    </th>
                    <th scope="col">Главница</th>
                    <th scope="col">Лихва</th>
                    <th scope="col">
                        <a asp-page="./Index"
                           asp-route-sortOrder="@Model.PayedOnDateSort"
                           asp-route-CreditId="@Model.CreditId"
                           asp-route-SearchInstallmentDate="@(Model.SearchInstallmentDate?.ToString("yyyy-MM-dd"))"
                           asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))"
                           asp-route-PageIndex="1">
                            Платено на
                        </a>
                    </th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rp in Model.RepaymentPlan)
                {
                    <tr>
                        <th>@rp.CreditID</th>
                        <th>@rp.ID</th>
                        <td>@rp.InstallmentNumber</td>
                        <td>@rp.InstallmentDate?.ToString("dd.MM.yyyy")</td>
                        <td>@rp.InstallmentAmount?.ToString("F2")</td>
                        <td>@rp.Principal?.ToString("F2")</td>
                        <td>@rp.Interest?.ToString("F2")</td>
                        <td>@rp.PayedOnDate?.ToString("dd.MM.yyyy")</td>
                        <td>
                            @if (rp.PayedOnDate.HasValue)
                            {
                                <button class="btn btn-secondary btn-sm" disabled>Платено</button>
                            }
                            else
                            {
                                <form method="post" asp-page-handler="Pay">
                                    <input type="hidden" name="id" value="@rp.ID" />
                                    @if (Model.CreditId.HasValue)
                                    {
                                        <input type="hidden" name="CreditId" value="@Model.CreditId" />
                                    }
                                    <button type="submit" class="btn btn-primary btn-sm">Плати вноска</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-page="./Index"
               asp-route-PageIndex="@(Model.PageIndex - 1)"
               asp-route-sortOrder="@Model.SortOrder"
               asp-route-CreditId="@Model.CreditId"
               asp-route-SearchInstallmentDate="@(Model.SearchInstallmentDate?.ToString("yyyy-MM-dd"))"
               asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))">
                Предишна
            </a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link"
                   asp-page="./Index"
                   asp-route-PageIndex="@i"
                   asp-route-sortOrder="@Model.SortOrder"
                   asp-route-CreditId="@Model.CreditId"
                   asp-route-SearchInstallmentDate="@(Model.SearchInstallmentDate?.ToString("yyyy-MM-dd"))"
                   asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))">
                    @i
                </a>
            </li>
        }
        <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
            <a class="page-link"
               asp-page="./Index"
               asp-route-PageIndex="@(Model.PageIndex + 1)"
               asp-route-sortOrder="@Model.SortOrder"
               asp-route-CreditId="@Model.CreditId"
               asp-route-SearchInstallmentDate="@(Model.SearchInstallmentDate?.ToString("yyyy-MM-dd"))"
               asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))">
                Следваща
            </a>
        </li>
    </ul>
</nav>
