@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Employee,Admin")]
@model CreditApplication.Pages.FinancialOperations.IndexModel

@{
    ViewData["Title"] = "Финансови операции";
}

@if (!string.IsNullOrEmpty(@Model.StatusMessage))
{
    <div class="alert alert-info">@Model.StatusMessage</div>
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form method="get" class="mb-4">
    <div class="form-row">
        <div class="form-group col-md-2">
            <label asp-for="CreditId">ID на кредита</label>
            <input asp-for="CreditId" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="SearchPayedOnDate">Дата на плащане</label>
            <input asp-for="SearchPayedOnDate" type="date" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="OperationType">Тип операция</label>
            <input asp-for="OperationType" type="number" class="form-control" />
        </div>
        <div class="form-group col-md-2 align-self-end">
            <button type="submit" class="btn btn-primary">Търси</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>№ на операция</th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.CreditIDSort"
                   asp-route-CreditId="@Model.CreditId"
                   asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))"
                   asp-route-OperationType="@Model.OperationType"
                   asp-route-PageIndex="1">
                    № на кредита
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.PayedOnDateSort"
                   asp-route-CreditId="@Model.CreditId"
                   asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))"
                   asp-route-OperationType="@Model.OperationType"
                   asp-route-PageIndex="1">
                    Дата на плащане
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.PayedAmountSort"
                   asp-route-CreditId="@Model.CreditId"
                   asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))"
                   asp-route-OperationType="@Model.OperationType"
                   asp-route-PageIndex="1">
                    Сума
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.OperationTypeSort"
                   asp-route-CreditId="@Model.CreditId"
                   asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))"
                   asp-route-OperationType="@Model.OperationType"
                   asp-route-PageIndex="1">
                    Тип операция
                </a>
            </th>
            <th>Създаден на</th>
            <th>Последна промяна</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FinancialOperation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreditID)
            </td>
                <td>@item.PayedOnDate?.ToString("dd.MM.yyyy")</td>
            <td>@item.PayedAmount.ToString("C",CultureInfo.GetCultureInfo("bg-BG"))</td>
            <td>@item.OperationTypeNomenclature.Description</td>
            <td>@item.CreatedOn</td>
            <td>@item.ModifiedOn</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <form method="post"
                          asp-page-handler="Storno"
                          asp-route-id="@item.ID"
                          asp-route-CreditId="@Model.CreditId"
                          asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))"
                          asp-route-OperationType="@Model.OperationType"
                          asp-route-sortOrder="@Model.SortOrder"
                          asp-route-PageIndex="@Model.PageIndex">
                        <button type="submit" class="btn btn-sm btn-danger">Сторнирай</button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-page="./Index"
               asp-route-PageIndex="@(Model.PageIndex - 1)"
               asp-route-sortOrder="@Model.SortOrder"
               asp-route-CreditId="@Model.CreditId"
               asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))"
               asp-route-OperationType="@Model.OperationType">
                Предишна
            </a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link"
                   asp-page="./Index"
                   asp-route-PageIndex="@i"
                   asp-route-sortOrder="@Model.SortOrder"
                   asp-route-CreditId="@Model.CreditId"
                   asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))"
                   asp-route-OperationType="@Model.OperationType">
                    @i
                </a>
            </li>
        }
        <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
            <a class="page-link"
               asp-page="./Index"
               asp-route-PageIndex="@(Model.PageIndex + 1)"
               asp-route-sortOrder="@Model.SortOrder"
               asp-route-CreditId="@Model.CreditId"
               asp-route-SearchPayedOnDate="@(Model.SearchPayedOnDate?.ToString("yyyy-MM-dd"))"
               asp-route-OperationType="@Model.OperationType">
                Следваща
            </a>
        </li>
    </ul>
</nav>

<form method="post" asp-page-handler="Storno">
    <div class="modal fade" id="stornoModal" tabindex="-1" aria-labelledby="stornoModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Сторниране</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Затвори"></button>
                </div>
                <div class="modal-body">
                    Сигурни ли сте, че искате да сторнирате тази операция?
                </div>
                <input type="hidden" name="id" id="stornoOperationId" />
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отказ</button>
                    <button type="submit" class="btn btn-danger">Сторнирай</button>
                </div>
            </div>
        </div>
    </div>
</form>
