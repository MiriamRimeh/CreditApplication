@page
@model CreditApplication.Pages.ClientAddresses.DetailsModel

@using System.Globalization

@{
    ViewData["Title"] = "Детайли на адрес";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h2 class="h4 mb-0">Детайли на адрес</h2>
                </div>
                <div class="card-body">
                    <dl class="row g-3 mb-0">
                        <dt class="col-md-4">Клиент</dt>
                        <dd class="col-md-8">
                            @if (Model.ClientAddress.ClientID != null)
                            {
                                <a asp-page="/Clients/Details" asp-route-id="@Model.ClientAddress.ClientID">
                                    @Model.ClientAddress.Client.EGN
                                </a>
                            }
                            else
                            {
                                <span> </span>
                            }
                        </dd>

                        <dt class="col-md-4">Населено място</dt>
                        <dd class="col-md-8">
                            @Model.ClientAddress.City
                        </dd>

                        <dt class="col-md-4">Улица/Квартал</dt>
                        <dd class="col-md-8">
                            @Model.ClientAddress.StreetNeighbourhood
                        </dd>

                        <dt class="col-md-4">Номер</dt>
                        <dd class="col-md-8">
                            @Model.ClientAddress.Number
                        </dd>

                        <dt class="col-md-4">Пощенски код</dt>
                        <dd class="col-md-8">
                            @Model.ClientAddress.PostCode
                        </dd>

                        <dt class="col-md-4">Създадено на</dt>
                        <dd class="col-md-8">
                            @Model.ClientAddress.CreatedOn.ToString("dd.MM.yyyy HH:mm:ss")
                        </dd>

                        <dt class="col-md-4">Последна промяна</dt>
                        <dd class="col-md-8">
                            @Model.ClientAddress.ModifiedOn.ToString("dd.MM.yyyy HH:mm:ss")
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-page="./Edit"
                       asp-route-id="@Model.ClientAddress.ID"
                       class="btn btn-primary-miriam btn-sm me-2">
                        Редактирай
                    </a>
                    <a asp-page="./Index"
                       class="btn btn-secondary-miriam btn-sm">
                        Назад
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
