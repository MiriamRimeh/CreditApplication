@page
@model CreditApplication.Pages.ClientFinancials.DetailsModel

@using System.Globalization

@{
    ViewData["Title"] = "Детайли на финансови данни";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h2 class="h4 mb-0">Детайли на финансови данни</h2>
                </div>
                <div class="card-body">
                    <dl class="row g-3 mb-0">
                        <dt class="col-md-4">Клиент</dt>
                        <dd class="col-md-8">
                            @if (Model.ClientFinancial.ClientID != null)
                            {
                                <a asp-page="/Clients/Details" asp-route-id="@Model.ClientFinancial.ClientID" class="text-decoration-none">
                                    @Model.ClientFinancial.Client.EGN
                                </a>
                            }
                            else
                            {
                                <span> </span>
                            }

                        </dd>

                        <dt class="col-md-4">Месечни приходи</dt>
                        <dd class="col-md-8">
                            @Model.ClientFinancial.MontlyIncome.ToString("C", CultureInfo.GetCultureInfo("bg-BG"))
                        </dd>

                        <dt class="col-md-4">Месечни разходи</dt>
                        <dd class="col-md-8">
                            @Model.ClientFinancial.MontlyExpenses.ToString("C", CultureInfo.GetCultureInfo("bg-BG"))
                        </dd>

                        <dt class="col-md-4">Тип заетост</dt>
                        <dd class="col-md-8">
                            @Model.ClientFinancial.EmploymentTypeNomenclature.Description
                        </dd>

                        <dt class="col-md-4">Създадено на</dt>
                        <dd class="col-md-8">
                            @Model.ClientFinancial.CreatedOn.ToString("dd.MM.yyyy HH:mm:ss")
                        </dd>

                        <dt class="col-md-4">Последна промяна</dt>
                        <dd class="col-md-8">
                            @Model.ClientFinancial.ModifiedOn.ToString("dd.MM.yyyy HH:mm:ss")
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-page="./Edit"
                       asp-route-id="@Model.ClientFinancial.ID"
                       class="btn btn-primary btn-sm me-2">
                        Редактирай
                    </a>
                    <a asp-page="./Index"
                       class="btn btn-dark btn-sm">
                        Назад
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
