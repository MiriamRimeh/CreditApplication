@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Client,Employee,Admin")]
@model CreditApplication.Pages.ApplicationForm.Step2Model

@{
    ViewData["Title"] = "Адрес";
}

<div class="progress" role="progressbar" aria-label="Example with label" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
    <div class="progress-bar bg-warning" style="width: 50%">Стъпка 2</div>
</div>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h2 class="mb-0">Данни за адрес</h2>
                </div>
                <div class="card-body">
                    <form method="post" class="row g-3 needs-validation" novalidate>
                        <input type="hidden" asp-for="ClientId" value="@Model.ClientId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group col-12">
                            <span class="text-danger">*</span>
                            <label asp-for="Address.City" class="control-label">Населено място:</label>
                            <input asp-for="Address.City" class="form-control" required="" />
                            <span asp-validation-for="Address.City" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12">
                            <span class="text-danger">*</span>
                            <label asp-for="Address.StreetNeighbourhood" class="control-label">Улица/Жилищен Комплекс:</label>
                            <input asp-for="Address.StreetNeighbourhood" class="form-control" required="" />
                            <span asp-validation-for="Address.StreetNeighbourhood" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12">
                            <label asp-for="Address.Number" class="control-label">Номер:</label>
                            <input asp-for="Address.Number" class="form-control" />
                            <span asp-validation-for="Address.Number" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12">
                            <span class="text-danger">*</span>
                            <label asp-for="Address.PostCode" class="control-label">Пощенски код:</label>
                            <input asp-for="Address.PostCode" class="form-control" required="" />
                            <span asp-validation-for="Address.PostCode" class="text-danger"></span>
                        </div>
                        <div class="col-12 text-center mt-4">
                            <button type="submit" class="btn btn-primary-miriam float-md-end">Напред</button>
                            <a asp-page="Step1_Personal" asp-route-clientId="@Model.ClientId" class="btn btn-outline-dark float-md-start">Назад</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
