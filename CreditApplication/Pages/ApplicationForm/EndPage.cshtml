@page
@model CreditApplication.Pages.ApplicationForm.EndPageModel
@using System.Globalization
@{
    ViewData["Title"] = "Успешно заявление!";
}
<div class="card mb-4">
    <div class="card-body">
        <div class="alert alert-success mb-0">
            <h5 class="mb-2"><strong>Поздравления!</strong></h5>
            <p class="mb-0">Кандидатурата е записана успешно и очаква решение.</p>
        </div>
    </div>
</div>

@if (Model.Client != null)
{
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><strong>Лични данни</strong></h5>
        </div>
        <div class="card-body">
            <p><strong>Име:</strong> @Model.Client.FirstName @Model.Client.MiddleName @Model.Client.LastName</p>
            <p><strong>Телефон:</strong> @Model.Client.PhoneNumber</p>
            <p><strong>Имейл:</strong> @Model.Client.Email</p>
            <p><strong>ЕГН:</strong> @Model.Client.EGN</p>
            <p><strong>Номер на лична карта:</strong> @Model.Client.IDCardNumber</p>
            <p><strong>Издадена на:</strong> @Model.Client.IDIssueDate.ToString("dd.MM.yyyy")</p>
            <p><strong>Валидна до:</strong> @Model.Client.IDValidityDate.ToString("dd.MM.yyyy")</p>
            <p><strong>Издадена от МВР:</strong> @Model.Client.IDIssuer</p>
        </div>
    </div>
}

@if (Model.Address != null)
{
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><strong>Адрес</strong></h5>
        </div>
        <div class="card-body">
            <p><strong>Град:</strong> @Model.Address.City</p>
            <p><strong>Улица/Квартал:</strong> @Model.Address.StreetNeighbourhood</p>
            <p><strong>Номер:</strong> @Model.Address.Number</p>
            <p><strong>Пощенски код:</strong> @Model.Address.PostCode</p>
        </div>
    </div>
}

@if (Model.Financial != null)
{
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><strong>Финансова информация</strong></h5>
        </div>
        <div class="card-body">
            <p><strong>Месечни доходи:</strong> @Model.Financial.MontlyIncome.ToString("C", CultureInfo.GetCultureInfo("bg-BG"))</p>
            <p><strong>Месечни разходи:</strong> @Model.Financial.MontlyExpenses.ToString("C", CultureInfo.GetCultureInfo("bg-BG"))</p>
            <p><strong>Тип на заетост:</strong> @Model.ClientEmploymentType</p>
        </div>
    </div>
}

@if (Model.Credit != null)
{
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><strong>Информация за кандидатура за кредит</strong></h5>
        </div>
        <div class="card-body">
            <p><strong>Желана сума:</strong> @Model.Credit.CreditAmount.ToString("C", CultureInfo.GetCultureInfo("bg-BG"))</p>
            <p><strong>Брой месечни вноски:</strong> @Model.Credit.CreditPeriod</p>
            <p><strong>Текущ статус на кредит:</strong> @Model.CreditStatusDescription</p>
        </div>
    </div>
}


<a asp-page="/Index" class="btn btn-primary-miriam mt-3">Назад към Начало</a>