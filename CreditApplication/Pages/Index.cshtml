@page
@model IndexModel
@{
    ViewData["Title"] = "Начало";
}


<div class="container mt-5">
    <div class="row" >
        <div class="col-md-5">
            <h2 class="mb-6">Калкулатор</h2>
            <div class="card shadow-sm p-4">
                <div class="mb-3">
