@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Employee,Admin")]
@model CreditApplication.Pages.Clients.DeleteModel

@{
    ViewData["Title"] = "Изтрий клиент";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header text-center">
            <h2 class="h4 mb-0">Изтриване на клиент</h2>
        </div>
        <div class="card-body">
            <p class="lead text-center text-danger fw-bold">Сигурни ли сте, че искате да изтриете този клиент?</p>
            <hr />
            <dl class="row g-3">
                <dt class="col-md-4">Първо име</dt>
                <dd class="col-md-8">@Model.Client.FirstName</dd>

                <dt class="col-md-4">Бащино име</dt>
                <dd class="col-md-8">@Model.Client.MiddleName</dd>

                <dt class="col-md-4">Фамилия</dt>
                <dd class="col-md-8">@Model.Client.LastName</dd>

                <dt class="col-md-4">ЕГН</dt>
                <dd class="col-md-8">@Model.Client.EGN</dd>

                <dt class="col-md-4">Имейл</dt>
                <dd class="col-md-8">@Model.Client.Email</dd>

                <dt class="col-md-4">Телефон</dt>
                <dd class="col-md-8">@Model.Client.PhoneNumber</dd>

                <dt class="col-md-4">Номер на лична карта</dt>
                <dd class="col-md-8">@Model.Client.IDCardNumber</dd>

                <dt class="col-md-4">Дата на издаване</dt>
                <dd class="col-md-8">@Model.Client.IDIssueDate.ToString("dd.MM.yyyy")</dd>

                <dt class="col-md-4">Дата на валидност</dt>
                <dd class="col-md-8">@Model.Client.IDValidityDate.ToString("dd.MM.yyyy")</dd>

                <dt class="col-md-4">Издадена от</dt>
                <dd class="col-md-8">@Model.Client.IDIssuer</dd>

                <dt class="col-md-4">Създадено на</dt>
                <dd class="col-md-8">@Model.Client.CreatedOn.ToString("dd.MM.yyyy HH:mm")</dd>

                <dt class="col-md-4">Последна промяна</dt>
                <dd class="col-md-8">@Model.Client.ModifiedOn.ToString("dd.MM.yyyy HH:mm")</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <form method="post" class="d-inline">
                <input type="hidden" asp-for="Client.ID" />
                <button type="submit" class="btn btn-danger btn-lg px-4 me-2">
                    <i class="bi bi-trash-fill"></i> Изтрий
                </button>
            </form>
            <a asp-page="./Index" class="btn btn-dark btn-lg px-4">
                <i class="bi bi-arrow-left"></i> Назад
            </a>
        </div>
    </div>
</div>
