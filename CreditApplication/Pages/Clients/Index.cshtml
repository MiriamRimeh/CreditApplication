@page
@model CreditApplication.Pages.Clients.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Клиенти</h1>
        <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-circle" style="color:white"></i>Създай нов</a>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row gx-2 gy-3 align-items-end">
                <div class="col-md-5">
                    <label asp-for="SearchName" class="form-label">Търсене по име</label>
                    <input asp-for="SearchName" class="form-control" placeholder="Име на клиент" />
                </div>
                <div class="col-md-5">
                    <label asp-for="SearchEGN" class="form-label">Търсене по ЕГН</label>
                    <input asp-for="SearchEGN" class="form-control" placeholder="ЕГН" />
                </div>
                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-search" style="color:white"></i>Търсене</button>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Име</th>
                    <th scope="col">ЕГН</th>
                    <th scope="col">Имейл</th>
                    <th scope="col">Телефон</th>
                    <th scope="col" class="text-end">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Client)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>
                            <div class="fw-semibold">
                                @item.FirstName @item.MiddleName @item.LastName
                            </div>
                        </td>
                        <td>@item.EGN</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td class="text-end">
                            <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary me-1">View</a>
                            <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-warning me-1">Edit</a>
                            <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
