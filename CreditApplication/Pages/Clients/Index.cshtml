@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Employee,Admin")]
@model CreditApplication.Pages.Clients.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Клиенти</h1>
        <a asp-page="Create" class="btn btn-primary">Създай нов</a>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row gx-2 gy-2 align-items-end">
                <div class="col-sm-3">
                    <label asp-for="SearchClientId" class="form-label">Търсене по клиент №</label>
                    <input asp-for="SearchClientId" type="number" class="form-control" placeholder="Номер на клиент" />
                </div>
                <div class="col-sm-3">
                    <label asp-for="SearchName" class="form-label">Търсене по име</label>
                    <input asp-for="SearchName" class="form-control" placeholder="Име на клиент" />
                </div>
                <div class="col-sm-3">
                    <label asp-for="SearchEGN" class="form-label">Търсене по ЕГН</label>
                    <input asp-for="SearchEGN" class="form-control" placeholder="ЕГН" />
                </div>
                <div class="col-sm-3 d-grid">
                    <button type="submit" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                        </svg>
                        Търси
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th scope="col">
                        <a asp-route-SortOrder="@Model.ClientIdSort"
                           asp-route-SearchClientId="@Model.SearchClientId"
                           asp-route-SearchName="@Model.SearchName"
                           asp-route-SearchEGN="@Model.SearchEGN"
                           class="text-decoration-none">
                            Клиент №
                            @if (String.IsNullOrEmpty(Model.SortOrder))
                            {
                                <i class="bi bi-caret-down-fill"></i>
                            }
                            else if (Model.SortOrder == "id_desc")
                            {
                                <i class="bi bi-caret-up-fill"></i>
                            }
                        </a>
                    </th>
                    <th scope="col">
                        <a asp-route-SortOrder="@Model.NameSort"
                           asp-route-SearchClientId="@Model.SearchClientId"
                           asp-route-SearchName="@Model.SearchName"
                           asp-route-SearchEGN="@Model.SearchEGN"
                           class="text-decoration-none">
                            Име
                            @if (String.IsNullOrEmpty(Model.SortOrder))
                            {
                                <i class="bi bi-caret-down-fill"></i>
                            }
                            else if (Model.SortOrder == "name_desc")
                            {
                                <i class="bi bi-caret-up-fill"></i>
                            }
                        </a>
                    </th>
                    <th scope="col">ЕГН</th>
                    <th scope="col">Имейл</th>
                    <th scope="col">Телефон</th>
                    <th scope="col" class="text-end">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Client)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>
                            <div class="fw-semibold">
                                @item.FirstName @item.MiddleName @item.LastName
                            </div>
                        </td>
                        <td>@item.EGN</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>

                        <td class="text-end">
                            <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary me-1">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots" viewBox="0 0 16 16">
                                    <path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3" />
                                </svg>
                            </a>
                            <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-warning me-1">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                                </svg>
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* Pagination *@
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-route-PageIndex="@(Model.PageIndex - 1)"
                       asp-route-SearchName="@Model.SearchName"
                       asp-route-SearchEGN="@Model.SearchEGN">
                        ‹ Предишна
                    </a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                        <a class="page-link"
                           asp-route-PageIndex="@i"
                           asp-route-SearchName="@Model.SearchName"
                           asp-route-SearchEGN="@Model.SearchEGN">
                            @i
                        </a>
                    </li>
                }
                <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-route-PageIndex="@(Model.PageIndex + 1)"
                       asp-route-SearchName="@Model.SearchName"
                       asp-route-SearchEGN="@Model.SearchEGN">
                        Следваща ›
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>
