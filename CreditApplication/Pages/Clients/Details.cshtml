@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Employee,Admin")]
@model CreditApplication.Pages.Clients.DetailsModel

@{
    ViewData["Title"] = "Детайли за клиент";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header text-center">
            <h2 class="h4 mb-0">Детайли на клиент</h2>
        </div>
        <div class="card-body">
            <dl class="row g-3 mb-0">
                <dt class="col-md-4">Име</dt>
                <dd class="col-md-8">@Model.Client.FirstName</dd>

                <dt class="col-md-4">Бащино име</dt>
                <dd class="col-md-8">@Model.Client.MiddleName</dd>

                <dt class="col-md-4">Фамилия</dt>
                <dd class="col-md-8">@Model.Client.LastName</dd>

                <dt class="col-md-4">ЕГН</dt>
                <dd class="col-md-8">@Model.Client.EGN</dd>

                <dt class="col-md-4">Имейл</dt>
                <dd class="col-md-8">@Model.Client.Email</dd>

                <dt class="col-md-4">Телефон</dt>
                <dd class="col-md-8">@Model.Client.PhoneNumber</dd>

                <dt class="col-md-4">Номер на лична карта</dt>
                <dd class="col-md-8">@Model.Client.IDCardNumber</dd>

                <dt class="col-md-4">Дата на издаване</dt>
                <dd class="col-md-8">@Model.Client.IDIssueDate.ToString("dd.MM.yyyy")</dd>

                <dt class="col-md-4">Дата на валидност</dt>
                <dd class="col-md-8">@Model.Client.IDValidityDate.ToString("dd.MM.yyyy")</dd>

                <dt class="col-md-4">Издадена от</dt>
                <dd class="col-md-8">@Model.Client.IDIssuer</dd>

                <dt class="col-md-4">Адрес</dt>
                <dd class="col-md-8">
                    @(Model.Client.ClientAddress != null
                            ? $"{Model.Client.ClientAddress.City}, {Model.Client.ClientAddress.StreetNeighbourhood}, {Model.Client.ClientAddress.Number}"
                            : string.Empty)

                    <dt class="col-md-4">Месечен доход</dt>
                    <dd class="col-md-8">
                        @(Model.Client.ClientFinancial?.MontlyIncome != null
                            ? Model.Client.ClientFinancial.MontlyIncome.ToString("C", CultureInfo.GetCultureInfo("bg-BG"))
                                : string.Empty)

                        <dt class="col-md-4">Месечни разходи</dt>
                        <dd class="col-md-8">
                            @(Model.Client.ClientFinancial?.MontlyExpenses != null
                                ? Model.Client.ClientFinancial.MontlyExpenses.ToString("C", CultureInfo.GetCultureInfo("bg-BG"))
                                : string.Empty)
                        </dd>
                        <dt class="col-md-4">Трудов статус</dt>
                        <dd class="col-md-8">
                            @(Model.Client.ClientFinancial?.EmploymentTypeNomenclature != null
                                    ? Model.Client.ClientFinancial.EmploymentTypeNomenclature.Description
                                    : string.Empty)

                            <dt class="col-md-4">Създадено на</dt>
                            <dd class="col-md-8">@Model.Client.CreatedOn.ToString("dd.MM.yyyy HH:mm:ss")</dd>

                            <dt class="col-md-4">Последна промяна</dt>
                            <dd class="col-md-8">@Model.Client.ModifiedOn.ToString("dd.MM.yyyy HH:mm:ss")</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            @using Microsoft.AspNetCore.Identity
            @if (User.IsInRole("Admin"))
            {
                <a asp-page="./Edit" asp-route-id="@Model.Client.ID" class="btn btn-primary me-2">
                     Редактирай
                </a>
            }
            <a asp-page="./Index" class="btn btn-dark me-2">Назад</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
